#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include <stdarg.h>
#include <unistd.h>
#include "main.h"

/**
 * _strspn - Return a segmented string using pointers
 * @s: Initial segment pointer
 * @accept: Pointer for bytes to accept from
 *
 * Return: Number of bytes occurring in another string
 */

int _pdeci(va_list ls)
{
int d;
d = va_arg(ls, int);
recur(d);
return (1);
}

void recur(int num)
{
if (num < 0)
{
_xchar('-');
num = num * -1;
}
else if (num == 0)
{
_xchar('0');
}
else if (num / 10)
{
recur(num / 10);
}
_xchar(num % 10 + '0');
}
